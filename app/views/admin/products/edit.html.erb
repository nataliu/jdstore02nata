<h2>Edit Product</h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @product.image.presetn? %>
    <span>目前商品图</spam>
    <%= image_tag(@product.image.thumb.url)%>
  <%end%>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.submit "submit", dataS: { disable_with:"submiting..." } %>

<%end%>
